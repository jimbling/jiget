<% title = "Daftar Kontak" %>

<div class="max-w-6xl mx-auto px-4">

   <!-- Header + Actions -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
  <!-- Judul dan deskripsi -->
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Daftar Kontak</h1>
    <p class="text-gray-600 mt-1">Kelola informasi kontak Anda dengan mudah</p>
  </div>

  <!-- Tombol aksi -->
  <div class="flex flex-wrap items-center gap-3">
    <!-- Tambah Kontak -->
    <button 
      id="btnTambah"
      class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 md:py-2.5 md:px-5 rounded-xl shadow-md hover:shadow-lg transition-all duration-200"
    >
      <svg xmlns="http://www.w3.org/2000/svg" 
           class="h-5 w-5 md:h-5 md:w-5" 
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M5 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0M3 21v-2a4 4 0 0 1 4-4h4c.96 0 1.84.34 2.53.9M16 3.13a4 4 0 0 1 0 7.75M16 19h6M19 16v6"/>
      </svg>
      <span>Tambah</span>
    </button>

    <!-- Import Kontak -->
    <button 
      id="btnOpenImportModal"
      class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 md:py-2.5 md:px-5 rounded-xl shadow-md hover:shadow-lg transition-all duration-200"
    >
      <svg xmlns="http://www.w3.org/2000/svg" 
           class="h-5 w-5 md:h-5 md:w-5"
           fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2M7 11l5 5l5-5M12 4v12"/>
      </svg>
      <span>Import</span>
    </button>
  </div>
</div>


  <!-- ============== MODAL IMPORT KONTAK ============== -->
<div id="importModal"
     class="fixed inset-0 hidden items-center justify-center z-50 bg-black/70 backdrop-blur-sm transition-opacity duration-300">
  <div
    class="bg-white rounded-2xl shadow-2xl w-full max-w-lg p-6 relative transform scale-95 opacity-0 transition-all duration-300">
    <!-- Tombol Close -->
    <button id="btnCloseModalImport"
            class="absolute top-4 right-4 text-gray-400 hover:text-gray-700 transition-colors duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
           stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Header -->
    <h2 class="text-2xl font-bold text-gray-900 mb-2 text-center">ðŸ“¥ Import Kontak</h2>
    <p class="text-sm text-gray-600 mb-6 text-center leading-relaxed">
      Pilih file Excel yang berisi daftar kontak Anda.<br>
      Anda juga dapat mengunduh template terlebih dahulu.
    </p>

    <!-- Download Template -->
    <a href="/contacts/template"
       class="inline-flex items-center justify-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium px-4 py-3 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 w-full sm:w-auto mx-auto">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5"
           viewBox="0 0 24 24" fill="none" stroke="currentColor"
           stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
        <path
          d="M12 18.004h-5.343c-2.572 -.004 -4.657 -2.011 -4.657 -4.487c0 -2.475 2.085 -4.482 4.657 -4.482c.393 -1.762 1.794 -3.2 3.675 -3.773c1.88 -.572 3.956 -.193 5.444 1c1.488 1.19 2.162 3.007 1.77 4.769h.99c1.38 0 2.573 .813 3.13 1.99" />
        <path d="M19 16v6" />
        <path d="M22 19l-3 3l-3 -3" />
      </svg>
      <span>Unduh Template</span>
    </a>

    <!-- Divider -->
    <div class="my-6 flex items-center">
      <div class="flex-grow border-t border-gray-200"></div>
      <span class="mx-3 text-gray-400 text-sm">atau</span>
      <div class="flex-grow border-t border-gray-200"></div>
    </div>

    <!-- Area Upload -->
    <label for="fileImport"
           class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-xl p-6 text-center cursor-pointer hover:border-blue-400 hover:bg-blue-50 transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mb-2 text-blue-500" fill="none" viewBox="0 0 24 24"
           stroke="currentColor" stroke-width="2">
        <path d="M14 3v4a1 1 0 0 0 1 1h4" />
        <path d="M5 12v-7a2 2 0 0 1 2 -2h7l5 5v4" />
        <path d="M4 15l4 6" />
        <path d="M4 21l4 -6" />
        <path
          d="M17 20.25c0 .414 .336 .75 .75 .75h1.25a1 1 0 0 0 1 -1v-1a1 1 0 0 0 -1 -1h-1a1 1 0 0 1 -1 -1v-1a1 1 0 0 1 1 -1h1.25a.75 .75 0 0 1 .75 .75" />
        <path d="M11 15v6h3" />
      </svg>
      <span class="text-gray-700 font-medium">Klik untuk pilih file</span>
      <span class="text-gray-400 text-xs mt-1">.xls / .xlsx (maks 5MB)</span>
      <input type="file" id="fileImport" name="file" hidden>
    </label>

    <!-- File Preview -->
    <p id="fileNamePreview"
       class="text-sm text-blue-600 mt-3 font-medium hidden text-center break-words"></p>

    <!-- Tombol Kirim -->
   <button id="btnSubmitImport"
        class="mt-6 w-full flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 
               text-white font-medium py-3 px-5 rounded-xl shadow-md hover:shadow-lg 
               transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
        disabled>
  <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none"
       stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
       class="icon icon-tabler icon-tabler-send">
    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
    <path d="M10 14l11 -11" />
    <path d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5" />
  </svg>
  <span>Import Sekarang</span>
</button>

  </div>
</div>



  <!-- Bulk Actions -->
  <div class="bg-white rounded-2xl shadow-sm p-4 mb-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
      <button 
        type="submit"
        form="bulk-delete-form"
        id="btnHapusTerpilih"
        class="flex items-center bg-red-50 text-red-600 hover:bg-red-100 px-4 py-2 rounded-lg shadow-sm transition-all duration-200 disabled:opacity-40 disabled:cursor-not-allowed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Hapus Terpilih
      </button>
    </div>
  </div>



  <!-- Contacts Table -->
  <form id="bulk-delete-form" method="POST" action="/contacts/bulk-delete">
    <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
      <div class="overflow-x-auto">
        <table id="contactsTable" class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="py-4 px-6">
                <div class="flex items-center">
                  <input type="checkbox" id="select-all" class="h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                </div>
              </th>
              <th class="py-4 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:text-gray-700">
                <div class="flex items-center">
                  <span>Nama</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                  </svg>
                </div>
              </th>
              <th class="py-4 px-6 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:text-gray-700">
                <div class="flex items-center">
                  <span>Nomor Telepon</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                  </svg>
                </div>
              </th>
              <th class="py-4 px-6 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% contacts.forEach(contact => { %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="py-4 px-6 whitespace-nowrap">
                  <input type="checkbox" name="ids[]" value="<%= contact.id %>" class="row-checkbox h-4 w-4 text-blue-600 rounded border-gray-300 focus:ring-blue-500">
                </td>
                <td class="py-4 px-6 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="h-10 w-10 flex-shrink-0 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                      <span class="font-medium text-blue-800"><%= contact.name ? contact.name.charAt(0).toUpperCase() : '?' %></span>
                    </div>
                    <div class="text-sm font-medium text-gray-900"><%= contact.name || '-' %></div>
                  </div>
                </td>
                <td class="py-4 px-6 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= contact.phone_number %></div>
                </td>
                <td class="py-4 px-6 whitespace-nowrap text-center">
                  <div class="flex justify-center space-x-2">
                    <a href="#" class="text-blue-600 hover:text-blue-800 p-2 rounded-lg hover:bg-blue-50 transition-colors duration-200 btnEdit" 
                      data-id="<%= contact.id %>" 
                      data-name="<%= contact.name %>" 
                      data-phone="<%= contact.phone_number %>">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </a>
                    
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        
      </div>
      
      
      
    </div>
  </form>

  

  <!-- Pagination Modern -->
<% if (totalPages > 1) { %>
  <div id="paginationContainer" class="flex justify-center mt-6 space-x-2">
    <!-- Tombol First & Prev -->
    <% if (currentPage > 1) { %>
      <a href="?page=1" class="px-3 py-2 border rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition">
        Â«
      </a>
      <a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 border rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition">
        â€¹
      </a>
    <% } %>

    <!-- Page Window -->
    <% 
      const windowSize = 3;
      const startPage = Math.max(1, currentPage - windowSize);
      const endPage = Math.min(totalPages, currentPage + windowSize);
    %>

    <% if (startPage > 1) { %>
      <span class="px-3 py-2 text-gray-500">...</span>
    <% } %>

    <% for (let i = startPage; i <= endPage; i++) { %>
      <a href="?page=<%= i %>"
         class="px-4 py-2 border rounded-lg transition 
                <%= i === currentPage ? 'bg-blue-600 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-100' %>">
        <%= i %>
      </a>
    <% } %>

    <% if (endPage < totalPages) { %>
      <span class="px-3 py-2 text-gray-500">...</span>
    <% } %>

    <!-- Tombol Next & Last -->
    <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 border rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition">
        â€º
      </a>
      <a href="?page=<%= totalPages %>" class="px-3 py-2 border rounded-lg bg-white text-gray-700 hover:bg-gray-100 transition">
        Â»
      </a>
    <% } %>
  </div>
<% } %>

</div>

<!-- Modal Tambah Kontak -->
<div id="modalTambah" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-md transform transition-all">
    <div class="p-6 border-b border-gray-100">
      <h2 class="text-xl font-semibold text-gray-900">Tambah Kontak Baru</h2>
    </div>
    <form id="formTambah" method="POST" action="/contacts" class="p-6 space-y-5">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Nama</label>
        <input type="text" name="name" required 
               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
               placeholder="Masukkan nama">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Nomor Telepon</label>
        <input type="text" name="phone_number" required 
               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
               placeholder="Masukkan nomor telepon">
      </div>
      <div class="flex justify-end gap-3 pt-2">
        <button type="button" id="btnCloseModal" 
                class="px-5 py-2.5 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors font-medium">
          Batal
        </button>
        <button type="submit" 
                class="px-5 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors font-medium">
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Modal Edit Kontak -->
<div id="modalEdit" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-md transform transition-all">
    <div class="p-6 border-b border-gray-100">
      <h2 class="text-xl font-semibold text-gray-900">Edit Kontak</h2>
    </div>
    <form id="formEdit" method="POST" class="p-6 space-y-2">
      <input type="hidden" name="id" id="edit_id">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Nama</label>
        <input type="text" name="name" id="edit_name" required 
               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
               placeholder="Masukkan nama">
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1.5">Nomor Telepon</label>
        <input type="text" name="phone_number" id="edit_phone_number" required 
               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
               placeholder="Masukkan nomor telepon">
      </div>
      <div class="flex justify-end gap-3 pt-2">
        <button type="button" id="btnCloseEditModal" 
                class="px-5 py-2.5 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors font-medium">
          Batal
        </button>
        <button type="submit" 
                class="px-5 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors font-medium">
          Simpan Perubahan
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/js/contacts.js"></script>
<script src="/js/contacts-import.js"></script>